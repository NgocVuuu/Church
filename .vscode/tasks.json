{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install all dependencies",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"install:all"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Client dev",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Dev (root)",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build"
		},
		{
			"label": "Start dev servers",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Run migration: galleryevents -> Home.events",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"migrate:galleryevents"
			],
			"isBackground": false,
			"problemMatcher": [
				"$eslint - stylish"
			],
			"group": "build"
		}
	]
}